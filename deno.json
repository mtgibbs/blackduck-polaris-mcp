{
  "version": "0.1.1",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch agent.ts",
    "build": "deno check agent.ts",
    "build:npm": "deno run -A build_npm.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check agent.ts"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.12.0",
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/dotenv": "jsr:@std/dotenv@0.225.3",
    "zod": "npm:zod@^3.23.8"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "exclude": [
      "CHANGELOG.md"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
